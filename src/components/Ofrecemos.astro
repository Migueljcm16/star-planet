<style>
    .o {

        & > div {
            display: flex;
            flex-direction: column;
            align-items: center;
            max-width: 1200px;
            margin: auto;
            padding: 150px 30px 0px 30px;
            box-sizing: border-box;
            gap: 40px;
        }
    }

    .o-titulo {
        color: #235066;
        font-size: 32px;
        font-weight: bold;
        line-height: 26px;
    }

    .o-info {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        width: 100%;
        gap: 50px;
    }

    .o-info-card {
        display: flex;
        flex-direction: column;
        max-width: 475px;
        background-color: #fff;
        padding: 35px;
        box-shadow: rgb(0 0 0 / 15%) 0px 2px 5px 0px;
        gap: 15px;

        & span:nth-child(1) {
            color: #235066;
            font-size: 16px;
            font-weight: bold;
        }

        & span:nth-child(2) {
            font-size: 15px;
            line-height: 24px;
        }
    }

    @media only screen and (max-width: 768px) {
        .o-titulo {
            font-size: 30px;
        }

        .o-info-card {
            & span:nth-child(1) {
                font-size: 15px;
            }

            & span:nth-child(2) {
                font-size: 14px;
            }
        }
    }

    @media only screen and (max-width: 500px) {
        .o-titulo {
            font-size: 28px;
        }
    }
</style>